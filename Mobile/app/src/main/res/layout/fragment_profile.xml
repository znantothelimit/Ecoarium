<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rootRelativeLayout">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/fragmentTitle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/green">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="회원 정보"
                    android:fontFamily="@font/jua"
                    android:textColor="@color/white"
                    android:textSize="28sp"/>
        </androidx.appcompat.widget.Toolbar>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:background="@drawable/gray_border"
                android:layout_below="@id/fragmentTitle"
                android:layout_centerInParent="true">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            app:cardCornerRadius="16dp">
                        <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/profileImageView"
                                android:layout_width="250dp"
                                android:layout_height="250dp"
                                android:src="@drawable/green"/>
                    </androidx.cardview.widget.CardView>
                    <Button
                            android:id="@+id/profileImageEditButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="변경"
                            android:textSize="20sp"
                            android:fontFamily="@font/jua"
                            android:layout_gravity="center">
                    </Button>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:textSize="30sp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/jua"
                                android:text="ID"
                                android:padding="5dp"/>
                        <TextView
                                android:id="@+id/idTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:textSize="20sp"
                                android:textColor="@color/gray"
                                android:fontFamily="@font/jua"
                                android:padding="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:textSize="30sp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/jua"
                                android:text="Email"
                                android:padding="5dp"/>
                        <TextView
                                android:id="@+id/emailTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:textSize="20sp"
                                android:textColor="@color/gray"
                                android:fontFamily="@font/jua"
                                android:padding="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:textSize="30sp"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/jua"
                                    android:text="Nickname"
                                    android:padding="5dp"/>
                            <View
                                    android:id="@+id/nicknameDivider"
                                    android:layout_width="0dp"
                                    android:layout_height="1dp"
                                    android:layout_weight="1"/>
                            <Button
                                    android:id="@+id/nicknameChangeButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="수정"
                                    android:textSize="20sp"
                                    android:fontFamily="@font/jua"
                                    android:layout_margin="10dp"/>
                            <Button
                                    android:id="@+id/nicknameConfirmButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="확인"
                                    android:layout_margin="10dp"
                                    android:visibility="gone"/>
                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                            <TextView
                                    android:id="@+id/nicknameTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:textSize="20sp"
                                    android:textColor="@color/gray"
                                    android:fontFamily="@font/jua"
                                    android:padding="5dp"/>
                            <EditText
                                    android:id="@+id/nicknameEditText"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_margin="10dp"
                                    android:textSize="20sp"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/jua"
                                    android:padding="5dp"
                                    android:hint="변경할 닉네임"
                                    android:visibility="gone"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:textSize="30sp"
                                android:textColor="@color/black"
                                android:fontFamily="@font/jua"
                                android:text="Password"
                                android:padding="5dp"/>
                        <View
                                android:id="@+id/passwordDivider"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_weight="1"/>
                        <Button
                                android:id="@+id/passwordChangeButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="수정"
                                android:textSize="20sp"
                                android:fontFamily="@font/jua"
                                android:layout_margin="10dp"/>
                        <Button
                                android:id="@+id/passwordConfirmButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="확인"
                                android:layout_margin="10dp"
                                android:visibility="gone"/>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        <EditText
                                android:id="@+id/currentPasswordEditText"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_margin="10dp"
                                android:textSize="20sp"
                                android:textColor="@color/black"
                                android:padding="5dp"
                                android:inputType="textPassword"
                                android:hint="현재 비밀번호"
                                android:visibility="gone"/>
                        <ImageButton
                                android:id="@+id/showCurrentPasswordButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/show_password_selector"
                                android:background="@color/white"
                                android:layout_gravity="right|center_vertical"
                                android:scaleType="centerInside"
                                android:visibility="gone"/>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        <EditText
                                android:id="@+id/newPasswordEditText"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_margin="10dp"
                                android:textSize="20sp"
                                android:textColor="@color/black"
                                android:inputType="textPassword"
                                android:padding="5dp"
                                android:hint="새 비밀번호"
                                android:visibility="gone"/>
                        <ImageButton
                                android:id="@+id/showNewPasswordButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/show_password_selector"
                                android:background="@color/white"
                                android:layout_gravity="right|center_vertical"
                                android:scaleType="centerInside"
                                android:visibility="gone"/>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        <EditText
                                android:id="@+id/newPasswordVerificationEditText"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_margin="10dp"
                                android:inputType="textPassword"
                                android:textSize="20sp"
                                android:textColor="@color/black"
                                android:padding="5dp"
                                android:hint="새 비밀번호 확인"
                                android:visibility="gone"/>
                        <ImageButton
                                android:id="@+id/showNewPasswordVerificationButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/show_password_selector"
                                android:background="@color/white"
                                android:layout_gravity="right|center_vertical"
                                android:scaleType="centerInside"
                                android:visibility="gone"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                    <Button
                            android:id="@+id/logoutButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="로그아웃"
                            android:textSize="17sp"
                            android:fontFamily="@font/jua"
                            android:padding="5dp"/>
                    <EditText
                            android:id="@+id/deleteAccountEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:hint="비밀번호를 입력하세요"
                            android:fontFamily="@font/jua"
                            android:background="@drawable/gray_border"
                            android:padding="5dp"
                            android:visibility="gone"/>
                    <Button
                            android:id="@+id/deleteAccountButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="회원 탈퇴"
                            android:fontFamily="@font/jua"
                            android:textSize="17sp"
                            android:backgroundTint="@color/red"
                            android:padding="5dp"/>
                    <Button
                            android:id="@+id/deleteAccountConfirmButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="탈퇴하기"
                            android:fontFamily="@font/jua"
                            android:textSize="17sp"
                            android:backgroundTint="@color/red"
                            android:padding="5dp"
                            android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>