<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.appcompat.widget.Toolbar
            android:id="@+id/fragmentTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/green">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="마이페이지"
                android:fontFamily="@font/jua"
                android:textColor="@color/white"
                android:textSize="28sp"/>
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
            android:id="@+id/profileRelativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:background="@drawable/gray_border"
            android:layout_below="@id/fragmentTitle"
            android:layout_centerInParent="true">
        <LinearLayout
                android:id="@+id/profileLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                    android:id="@+id/profileInfoLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        app:cardCornerRadius="16dp">
                    <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/mypageImageView"
                            android:layout_width="170dp"
                            android:layout_height="170dp"
                            android:src="@drawable/green"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <TextView
                            android:id="@+id/nicknameTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="15dp"
                            android:textSize="30sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/jua"
                            android:padding="5dp"/>
                    <TextView
                            android:id="@+id/idTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginBottom="5dp"
                            android:textSize="20sp"
                            android:textColor="@color/gray"
                            android:fontFamily="@font/jua"
                            android:padding="5dp"/>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <Button
                                android:id="@+id/editProfileButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="15dp"
                                android:text="회원 관리"
                                android:fontFamily="@font/jua"
                                android:textSize="15sp"
                                android:padding="5dp"/>
                        <Button
                                android:id="@+id/logoutButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="15dp"
                                android:text="로그아웃"
                                android:fontFamily="@font/jua"
                                android:textSize="15sp"
                                android:padding="5dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView
                    android:id="@+id/pointTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="15dp"
                    android:textSize="27sp"
                    android:text="포인트"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:padding="15dp"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/gray_border"
            android:layout_below="@id/profileRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:fontFamily="@font/jua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="23sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="스탬프 내역">
            </TextView>
            <View
                    android:id="@+id/stampDivider"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>
            <Button
                    android:id="@+id/allButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="전체"
                    android:textColor="@drawable/button_color_selector">
            </Button>
            <Button
                    android:id="@+id/accumulationButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="적립"
                    android:textColor="@drawable/button_color_selector">
            </Button>
            <Button
                    android:id="@+id/usageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="사용"
                    android:textColor="@drawable/button_color_selector">
            </Button>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/stampRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>